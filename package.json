{
  "name": "nearbytes-crypto",
  "version": "1.0.0",
  "description": "NearBytes cryptographic storage protocol - immutable data collections with end-to-end encryption",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "nearbytes": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.{json,md}\"",
    "start": "node dist/cli/index.js",
    "server": "node dist/server/index.js",
    "type-check": "tsc --noEmit",
    "dev:server": "npm run build --silent && npm run server",
    "dev:ui": "npm --prefix ui run dev",
    "dev": "concurrently -k \"npm run dev:server\" \"npm run dev:ui\"",
    "mega": "bash scripts/run-mega-dev.sh"
  },
  "keywords": [
    "cryptography",
    "storage",
    "encryption",
    "content-addressed",
    "immutable",
    "protocol"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "cors": "^2.8.6",
    "express": "^4.22.1",
    "multer": "^2.0.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "supertest": "^7.2.2",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  }
}
